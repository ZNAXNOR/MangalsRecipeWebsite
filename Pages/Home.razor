@page "/"

<PageTitle>Home</PageTitle>

<!-- Main content of the page -->
<div class="mt-10 pb-24 sm:pb-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <!-- Title -->
        <div class="lg:mx-0">
            <h2 class="text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl">Videos Page</h2>
            <p class="text-lg/8 mt-2 text-gray-600">This is the sub-title placeholder.</p>
            <!-- Stats -->
            <dl class="mt-5 grid grid-cols-1 gap-x-8 gap-y-16 lg:grid-cols-3">
                <!-- Stat 1 -->
                <div class="flex max-w-xs flex-col gap-y-4">
                    <dt class="text-base/7 font-normal text-gray-600">Number of Videos Posted</dt>
                    <dd class="order-first text-xl font-semibold tracking-tight text-gray-900 sm:text-3xl">119</dd>
                </div>
                <!-- Stat 2 -->
                <div class="flex max-w-xs flex-col gap-y-4">
                    <dt class="text-base/7 font-normal text-gray-600">Total number of views</dt>
                    <dd class="order-first text-xl font-semibold tracking-tight text-gray-900 sm:text-3xl">44 million</dd>
                </div>
                <!-- Stat 3 -->
                <div class="flex max-w-xs flex-col gap-y-4">
                    <dt class="text-base/7 font-normal text-gray-600">Total video minutes</dt>
                    <dd class="order-first text-xl font-semibold tracking-tight text-gray-900 sm:text-3xl">46,000</dd>
                </div>
            </dl>
        </div>

        <div class="mx-auto mt-10 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-20 border-t border-gray-200 pt-10 sm:mt-16 sm:pt-16 lg:mx-0 lg:max-w-none lg:grid-cols-3">
            <!-- Video Card -->
            <article class="group flex max-w-xl flex-col items-start">
                <div class="relative isolate flex flex-col items-start md:col-span-3">
                    <!-- Image -->
                    <div class="relative h-52 w-full overflow-hidden rounded-lg">
                        <img src="https://i.ytimg.com/vi/5ml4WMlFN3c/hqdefault.jpg" alt="हॉटेल सारख पालक पनीर"
                             class="absolute inset-0 h-full w-full object-cover transition-transform duration-300 group-hover:scale-105" />
                    </div>

                    <!-- Title -->
                    <p class="mt-4 text-lg font-semibold text-gray-900 transition-colors duration-300 group-hover:text-gray-700">
                        <a href="detail">
                            <span class="absolute inset-0 z-10"></span>
                            हॉटेल सारख पालक पनीर | Palak paneer recipe in marathi by Mangal
                        </a>
                    </p>
                </div>
            </article>

            <!-- Repeat other blog cards here... -->

        </div>
    </div>
</div>

