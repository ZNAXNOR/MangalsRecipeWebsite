@using Microsoft.JSInterop

<div class="mx-auto aspect-video w-full max-w-4xl">
    <iframe id="yt-player"
            class="h-full w-full rounded-2xl shadow-lg"
            src="https://www.youtube.com/embed/@(VideoId)?enablejsapi=1&rel=0&modestbranding=1&controls=1&showinfo=0&fs=0&iv_load_policy=3"
            title="YouTube video player"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope"
            allowfullscreen>
    </iframe>
</div>

@code {
    [Parameter]
    public string VideoId { get; set; }
}
